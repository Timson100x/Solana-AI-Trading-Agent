# ═══════════════════════════════════════════════════════
# SOLANA AI TRADING AGENT - CONFIGURATION
# ═══════════════════════════════════════════════════════

# ═══ AI & APIs ═══
GEMINI_API_KEY=
# Get from: https://aistudio.google.com/apikey (FREE)

HELIUS_API_KEY=
# Get from: https://dev.helius.xyz (FREE tier)

# ═══ TELEGRAM BOT ═══
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ═══ SOLANA ═══
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY
WALLET_PRIVATE_KEY=

# ═══ TRADING ═══
TRADING_ENABLED=false
TOTAL_CAPITAL_SOL=0.17
MAX_POSITION_PERCENT=50
MIN_POSITION_SIZE_SOL=0.01
CLOSE_ALL_POSITIONS_AT=23:30
MAX_DAILY_TRADES=10

# ═══ RISK ═══
STOP_LOSS_PERCENT=15
TAKE_PROFIT_PERCENT=30
MIN_CONFIDENCE=75

# ═══ AUTO WALLET SCOUTING (DEXScreener) ═══
AUTO_SCOUT_WALLETS=true
SCOUT_INTERVAL_HOURS=24

# DEXScreener Token Filters
MIN_TOKEN_LIQUIDITY=50000
# Minimum $50k liquidity

MIN_TOKEN_VOLUME=10000
# Minimum $10k 24h volume

MIN_PRICE_CHANGE=50
# Minimum +50% price change (24h)

MAX_PRICE_CHANGE=1000
# Maximum +1000% price change (avoid obvious scams)

# Wallet Quality Filters
MIN_WALLET_WIN_RATE=60
# Minimum 60% win rate to track wallet

AUTO_REMOVE_UNDERPERFORMERS=true
REVIEW_INTERVAL_DAYS=7

# ═══ FEATURES ═══
AUTO_WRAP_SOL=true
KEEP_SOL_BALANCE=0.05
SLIPPAGE_BPS=100
PORT=3000

# ═══ OPTIONAL: Real-time Updates ═══
HELIUS_WEBHOOKS=false
# Enable Helius webhooks (requires public URL)

PUBLIC_URL=
# Your public URL for webhooks (if using)