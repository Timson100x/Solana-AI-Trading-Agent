# ===================================
# SOLANA AI TRADING AGENT - ElizaOS V2
# Production Configuration
# ===================================

# === SOLANA CONFIGURATION ===
RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
COMMITMENT_LEVEL=confirmed

# === WALLET CONFIGURATION ===
# ⚠️ USE DEDICATED TRADING WALLET! NOT YOUR MAIN WALLET!
WALLET_PRIVATE_KEY=your_base58_private_key_here

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === GOOGLE AI (GEMINI) ===
GOOGLE_AI_API_KEY=your_google_ai_api_key

# === TRADING SETTINGS ===
# Start with Alert Mode (false) for testing!
TRADING_ENABLED=false
AUTO_WRAP_SOL=false

# Trading Parameters
MIN_CONFIDENCE=75
MAX_TRADE_AMOUNT=0.1
KEEP_SOL_BALANCE=0.05
SLIPPAGE_BPS=100

# === RISK MANAGEMENT ===
STOP_LOSS_PERCENTAGE=15
TAKE_PROFIT_PERCENTAGE=30
MAX_DAILY_TRADES=20
MAX_POSITION_SIZE=0.2

# === WEB DASHBOARD ===
ENABLE_WEB_DASHBOARD=true
WEB_PORT=3000

# === EXTERNAL API (NEW! - For chat integration) ===
ENABLE_EXTERNAL_API=true
EXTERNAL_API_PORT=3001
EXTERNAL_API_KEY=your-super-secret-api-key-here

# === NGROK (For external access) ===
# Get free token at: https://ngrok.com
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# === API SETTINGS ===
ENABLE_API=true
API_PORT=3000

# === MONITORING ===
ENABLE_HEALTH_CHECKS=true
ALERT_ON_ERROR=true

# === ADVANCED (ElizaOS V2) ===
COMPUTE_UNIT_LIMIT=200000
BASE_PRIORITY_FEE=1000000
DYNAMIC_PRIORITY_FEES=true
PRIORITY_LEVEL=high

# === DEVELOPMENT ===
LOG_LEVEL=info
NODE_ENV=production
