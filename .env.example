# ===================================
# SOLANA AI TRADING AGENT - ElizaOS V2
# Complete Configuration
# ===================================

# === SOLANA CONFIGURATION ===
RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
COMMITMENT_LEVEL=confirmed

# === HELIUS WEBHOOKS ===
# Enable real-time transaction monitoring (recommended for production)
HELIUS_WEBHOOKS=false
HELIUS_API_KEY=your_helius_api_key_here
# Public URL where Helius can reach your webhook endpoint
# Use ngrok, cloudflare tunnel, or VPS public IP
PUBLIC_URL=https://your-public-url.ngrok.io
# Webhook transaction types to monitor (SWAP, TRANSFER, NFT_SALE, etc.)
HELIUS_WEBHOOK_TYPES=SWAP,TRANSFER

# === WALLET CONFIGURATION ===
# ⚠️ USE DEDICATED TRADING WALLET! NOT YOUR MAIN WALLET!
WALLET_PRIVATE_KEY=your_base58_private_key_here

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === GOOGLE AI (GEMINI) ===
GOOGLE_AI_API_KEY=your_google_ai_api_key

# === TRADING SETTINGS ===
# Start with Alert Mode (false) for testing!
TRADING_ENABLED=false
AUTO_WRAP_SOL=false

# Trading Parameters
MIN_CONFIDENCE=75
MAX_TRADE_AMOUNT=0.1
KEEP_SOL_BALANCE=0.05
SLIPPAGE_BPS=100

# === RISK MANAGEMENT ===
STOP_LOSS_PERCENTAGE=15
TAKE_PROFIT_PERCENTAGE=30
MAX_DAILY_TRADES=20
MAX_POSITION_SIZE=0.2

# === WEB DASHBOARD ===
ENABLE_WEB_DASHBOARD=true
WEB_PORT=3000

# === EXTERNAL API (Chat Integration) ===
ENABLE_EXTERNAL_API=true
EXTERNAL_API_PORT=3001
EXTERNAL_API_KEY=your-super-secret-api-key-here

# === NGROK (External Access) ===
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# === MULTI-PLATFORM INTEGRATION (NEW!) ===

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_DEV_WEBHOOK_URL=https://discord.com/api/webhooks/...  # Optional

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# TikTok (Optional)
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# Email (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your.email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_RECIPIENT=recipient@email.com

# === MONITORING ===
ENABLE_HEALTH_CHECKS=true
ALERT_ON_ERROR=true
ENABLE_MULTI_PLATFORM=true  # Enable/disable all platforms

# === ADVANCED (ElizaOS V2) ===
COMPUTE_UNIT_LIMIT=200000
BASE_PRIORITY_FEE=1000000
DYNAMIC_PRIORITY_FEES=true
PRIORITY_LEVEL=high

# === DEVELOPMENT ===
LOG_LEVEL=info
NODE_ENV=production
