# ═══════════════════════════════════════════════════════
# SOLANA AI TRADING AGENT - CONFIGURATION
# ═══════════════════════════════════════════════════════

# ═══ AI & APIs ═══
GEMINI_API_KEY=
# Get from: https://aistudio.google.com/apikey (FREE)

HELIUS_API_KEY=
# Get from: https://dev.helius.xyz (FREE tier)

BIRDEYE_API_KEY=
# Get from: https://birdeye.so (for auto wallet discovery)
# OPTIONAL - if not set, manual wallet tracking only

# ═══ TELEGRAM BOT ═══
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ═══ SOLANA ═══
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY
WALLET_PRIVATE_KEY=

# ═══ TRADING ═══
TRADING_ENABLED=false
TOTAL_CAPITAL_SOL=0.17
MAX_POSITION_PERCENT=50
MIN_POSITION_SIZE_SOL=0.01
CLOSE_ALL_POSITIONS_AT=23:30
MAX_DAILY_TRADES=10

# ═══ RISK ═══
STOP_LOSS_PERCENT=15
TAKE_PROFIT_PERCENT=30
MIN_CONFIDENCE=75

# ═══ AUTO WALLET SCOUTING ═══
AUTO_SCOUT_WALLETS=true
# Automatically find & add profitable wallets

SCOUT_INTERVAL_HOURS=24
# How often to scout for new wallets

MIN_WALLET_WIN_RATE=60
# Minimum win rate to add wallet (60%)

AUTO_REMOVE_UNDERPERFORMERS=true
# Remove wallets with <40% win rate

REVIEW_INTERVAL_DAYS=7
# Review wallet performance every 7 days

# ═══ FEATURES ═══
AUTO_WRAP_SOL=true
KEEP_SOL_BALANCE=0.05
SLIPPAGE_BPS=100
PORT=3000